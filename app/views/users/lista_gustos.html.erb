<!--<p id="notice"><%#= notice %></p>-->
<section class="hero is-danger is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="box">
        <h1 class="title" style="color: hsl(0, 0%, 21%)">Mis Gustos</h1>
        <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th> Acciones </th>
          </tr>
          </thead>

          <tbody>
          <% current_user.gustos.each do |gusto| %>
            <tr>
                <td style="padding:10px"><%=  gusto.nombre  %></td>
                <td style="padding:10px"><%=  gusto.descripcion  %></td>
                <td style="padding:10px"><%=  link_to 'Eliminar de Mis Gustos', eliminar_gusto_path(gusto_id: gusto.id, user_id: current_user.id) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <br>

        <a href="/gustos" class="button is-warning">Agregar nuevos gustos</a>
        <a href="<%= user_perfil_path(current_user.id) %>" class="button is-secondary">Volver al Perfil</a>
      </div>
    </div>
  </div>
</section>