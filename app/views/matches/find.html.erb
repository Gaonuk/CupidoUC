<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Lista de matches
      </h1>
      <h2 class="subtipero tle">
        Invita a tus match a una cita ¡anímate!
      </h2>
    </div>
  </div>
</section>

<section class="hero is-fullheight is-danger">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered is-multiline">
        <% @matches.each do |user_match| %>
          <% if user_match.user_id1 == current_user.id %>
            <div class="column is-6-desktop is-6-widescreen">
              <div class="box">
                <article class="media">
                  <div class="media-left">
                    <figure class="image is-150x150">
                      <img class="rounded-circle" src="https://via.placeholder.com/150" alt=""/>
                    </figure>
                  </div>
                  <div class="media-content">
                    <div class="content">
                      <h3 class="title" style="color: hsl(0, 0%, 21%)"> <%= User.find_by(id: user_match.user_id2).nombre %></h3>
                      <p>
                        Mi edad es <%= User.find_by(id: user_match.user_id2).edad_numeros %> años.

                        Vivo en la comuna 1<%= User.find_by(id: user_match.user_id2).comuna_id %>.
                      </p>
                    </div>
                  </div>
                </article>
              </div>
              <div class="columns is-centered">
                <div class="column is-centered">
                  <div class="button">
                    <%= link_to 'Invitar a una cita ❤️', new_invitation_a_path(user_match.user_id2) %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if user_match.user_id2 == current_user.id %>
            <div class="column is-6-desktop is-6-widescreen">
              <div class="box">
                <article class="media">
                  <div class="media-left">
                    <figure class="image is-150x150">
                      <img class="rounded-circle" src="https://via.placeholder.com/150" alt=""/>
                    </figure>
                  </div>
                  <div class="media-content">
                    <div class="content">
                      <h3 class="title" style="color: hsl(0, 0%, 21%)"> <%= User.find_by(id: user_match.user_id1).nombre %></h3>
                      <p>
                        Mi edad es <%= User.find_by(id: user_match.user_id1).edad_numeros %> años.

                        Vivo en la comuna <%= User.find_by(id: user_match.user_id1).comuna.nombre %>.
                      </p>
                    </div>
                  </div>
                </article>
              </div>
              <div class="columns is-centered">
                <div class="column is-centered">
                  <div class="box">
                    <%= link_to 'Invitar a una cita ❤️', new_invitation_a_path(user_match.user_id1) %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        
      </div>
      
    </div>
   
  </div>
  <div class="column is-centered"> 
    <a href="<%= users_locales_path %>" class="button is-warning">Buscar local para cita</a>
    
    <a href=<%= invitations_list_path  %> class="button is-warning">Lista invitaciones</a>
    
    <a href="/" class="button is-warning">Volver al Inicio</a>
  </div>
</section>