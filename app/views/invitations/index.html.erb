<p id="notice"><%= notice %></p>
<br>
<h1 class="table" style="color:  hsl(0, 0%, 21%)">
  <strong>Invitations</strong>
</h1>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>User invita</th>
        <th>Fecha</th>
        <th>Local</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @invitations.each do |invitation| %>
        <% if invitation.user_invitado == current_user.id %>
          <tr>
            <td><%= invitation.user_invita %></td>
            <td><%= invitation.fecha %></td>
            <td><%= invitation.local_id %></td>
            <td><%= link_to 'Ver detalle', invitation %></td>

          </tr>
          <br>
        <% end %>
      <% end %>
      <br>
    </tbody>
  </table>
</div>
