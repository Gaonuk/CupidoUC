<p id="notice"><%= notice %></p>

<h1>Invitations</h1>

<table>
  <thead>
    <tr>
      <th>User invita</th>
      <th>Fecha</th>
      <th>Local</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <% if invitation.user_invitado == current_user.id %>
        <tr>
          <td><%= invitation.user_invita %></td>
          <td><%= invitation.fecha %></td>
          <td><%= invitation.local_id %></td>
          <td><%= link_to 'Ver detalle', invitation %></td>
          <td><%= link_to 'Responder', edit_invitation_path(invitation) %></td>
          
        </tr>
        <br>
      <% end %>
    <% end %>
    <br>
  </tbody>
</table>

