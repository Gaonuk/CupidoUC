<h1>Gustos de <%= current_user.nombre %></h1>

<table class="lista-gustos">
  <thead>
  <tr>
    <th >Nombre</th>
    <th colspan="3">Descripcion</th>
    <th colspan="3"> Acciones </th>
  </tr>
  </thead>

  <tbody>
  <% @gustos.each do |gusto| %>
    <tr>
      <td><%= gusto.nombre %></td>
      <td><%= gusto.descripcion %></td>
<!--      <td><%#= gusto.users.all %></td>-->
      <td><%= link_to 'Ver', gusto_path(gusto.id) %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<a href="/gustos/new?id=<%= current_user.id %>">Crear Gusto</a>
