<h1>Locales de DCCitas</h1>

<table class="lista-locales">
  <thead>
  <tr>
    <th style="padding:10px">ID</th>
    <th style="padding:10px">Nombre</th>
    <th style="padding:10px">Email</th>
    <th style="padding:10px">Valoracion</th>
<!--    <th style="padding:10px">Comuna</th>-->
    <th style="padding:10px">Descripcion</th>
    <th style="padding:10px"> Acciones </th>
  </tr>
  </thead>

  <tbody>
  <% @locals.each do |local| %>
    <tr>
      <td style="padding:10px"><%= local.id %></td>
      <td style="padding:10px"><%= local.nombre %></td>
      <td style="padding:10px"><%= local.email %></td>
      <td style="padding:10px"><%= local.valoracion %></td>
<!--      <td style="padding:10px"><%#= local.comuna %></td>-->
      <td style="padding:10px"><%= local.descripcion %></td>
      <td style="padding:10px"><%= link_to 'Ver', local_path(local.id) %>
    </tr>
  <% end %>
  </tbody>
</table>

